<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edytuj <%= game.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/games/<%=game._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Nazwa gry</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= game.name %>">
                </div>
                <div class="form-group">
                    <label for="image">URL okładki</label>
                    <input class="form-control" type="text" name="image" id="image" value="<%= game.image %>">
                </div>
                <div class="form-group">
                    <label for="description">Opis</label>
                    <input class="form-control" type="text" name="description" id="description" value="<%= game.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Zatwierdź!</button>
                </div>
            </form>
            <a href="/games">Powrót</a>
        </div>
    </div>
<% include ../partials/footer %>

