<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Utwórz nową grę</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/games" method="POST">
                <div class="form-group">
                    <label for="name">Nazwa gry</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Podaj nazwę gry...">
                </div>
                <div class="form-group">
                    <label for="image">URL okładki .jpg (<a href="https://www.imgur.com" target="_blank">zalecamy hosting na www.imgur.com</a>)</label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="Podaj URL...">
                </div>
                <div class="form-group">
                    <label for="description">Zwięzły opis gry</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Podaj opis gry...">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Zatwierdź!</button>
                </div>
            </form>
            <a href="/games">Powrót</a>
        </div>
    </div>
<% include ../partials/footer %>

